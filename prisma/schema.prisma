generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String            @id @default(cuid())
  name             String
  email            String            @unique
  password         String
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  microcontrollers Microcontroller[]
  enterprises      UserEnterprise[]
}

model Microcontroller {
  id           String       @id @default(cuid())
  name         String
  chip         String
  macAddress   String
  model        String
  plate        String
  vehicleType  VehicleType
  active       Boolean
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  deletedAt    DateTime?
  user         User         @relation(fields: [userId], references: [id])
  userId       String
  coordinates  Coordinate[]
  enterprise   Enterprise?  @relation(fields: [enterpriseId], references: [id])
  enterpriseId String?
}

model Coordinate {
  id                String          @id @default(cuid())
  latitude          Float
  longitude         Float
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  microcontroller   Microcontroller @relation(fields: [microcontrollerId], references: [id])
  microcontrollerId String
}

model UserEnterprise {
  id           String     @id @default(cuid())
  role         UserRole
  status       UserStatus
  userId       String
  user         User       @relation(fields: [userId], references: [id])
  enterpriseId String
  enterprise   Enterprise @relation(fields: [enterpriseId], references: [id])

  @@unique([userId, enterpriseId])
}

model Enterprise {
  id               String            @id @default(cuid())
  name             String
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  deletedAt        DateTime?
  users            UserEnterprise[]
  microcontrollers Microcontroller[]
}

enum UserRole {
  USER
  ADMIN
  OWNER
}

enum UserStatus {
  ENABLED
  DISABLED
}

enum VehicleType {
  CAR
  MOTORCYCLE
  TRUCK
}
